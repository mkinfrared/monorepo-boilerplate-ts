{
  "name": "@monorepo/server",
  "version": "0.0.1",
  "description": "A starting point for Node.js express apps with TypeScript",
  "license": "MIT",
  "scripts": {
    "build": "cross-env NODE_ENV=production yarn build:ts && yarn copy-static-assets",
    "serve": "node build/server.js",
    "start": "cross-env NODE_ENV=development ts-node-dev --clear -C ttypescript src/server.ts",
    "test": "jest --forceExit --coverage --verbose",
    "build:ts": "ttsc",
    "watch:ts": "ttsc -w",
    "copy-static-assets": "ts-node copyStaticAssets.ts",
    "coverage": "open-cli ./coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@bookstore/common": "0.0.1",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "lusca": "^1.6.1",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.18"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.14",
    "@types/jest": "^24.0.18",
    "@types/lusca": "^1.6.1",
    "@types/node": "^12.7.2",
    "@types/shelljs": "^0.8.5",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "jest": "24.9.0",
    "open-cli": "^5.0.0",
    "shelljs": "^0.8.3",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node-dev": "^1.0.0-pre.41",
    "ttypescript": "^1.5.7",
    "typescript-transform-paths": "^1.1.10"
  }
}
